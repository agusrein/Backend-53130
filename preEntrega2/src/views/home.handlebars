
<div class="d-flex flex-wrap col-12 justify-content-center">
  {{#each products}}

  <div class="card col-6 m-3 d-flex">
    <div class="d-flex justify-content-evenly">
    <div class="border-2 col-4 img__simulator">
      <img src="" class="" alt="...">
    </div>
    <div class="card-body col-8">
      <h5 class="card-title">{{this.title}}</h5>
      <p class="card-text">{{this.description}}</p>
      <p class="fs-5 fw-semibold">$ {{this.price}}</p>
    </div>
    </div>
    <button class="rounded-2">Agregar al carrito</button>
  </div>
  
  {{/each}}
</div>

<div class="d-flex col-12 justify-content-center mt-3 mb-3">
  
  {{#if hasPrevPage}}
  <a class="col-2 text-center" href="{{prevLink}}">Anterior</a>
  {{/if}}
  <p class="col-2 text-center">Pagina {{currentPage}} de {{totalPages}}</p>
  {{#if hasNextPage}}
  <a class="col-2 text-center" href="{{nextLink}}">Siguiente</a>
  {{/if}}
  
 
  
</div>